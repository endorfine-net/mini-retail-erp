<style type="text/css">
.ui-dialog-titlebar-close{ display:none;}
</style>
<div id="loginScreen" title="Вход в системата">
<% form_for ([@user_session], :url => user_session_path, :html => { :multipart => true, :autocomplete =>"off"})  do |f| %>
	<div id="messageBox"><%= f.error_messages %></div>	
	<fieldset>
      	<label for="email">Потребител</label>
  		<%= f.text_field :login %>
      	<label for="password">Парола</label>
  		<%= f.password_field :password %>
  		<!-- 
  		  <label for="remember_me"> Запомни ме&nbsp;&nbsp;<%= f.check_box :remember_me %> 
  		    <%= #link_to "Забравена парола?", new_password_reset_path 
  		    %>
  		  </label>
  		  -->		
	</fieldset>
<% end %>

</div>

<script>
$(document).ready(function(){
	$("#loginScreen").dialog({
				bgiframe: true,
				autoOpen: true,
				resizable: false,
				height: 330,
				width: 500,
				modal: true,
				buttons: {				
					"Вход": function() {
						$("#new_user_session").submit();
					}
				}
	});				
				
	$("#user_session_password").keypress(function(event) {
		if (event.keyCode == '13') {
			 $("#new_user_session").submit();
		 }
	});

});


</script>