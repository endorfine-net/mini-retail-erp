<script language="JavaScript">
$(document).ready(function() {
  $('#color_primary').colpick({
    layout:'hex',
    flat:false,
    submit:0,
    colorScheme:'light',
    onChange:function(hsb,hex,rgb,fromSetColor) {
      if(!fromSetColor) $('#color_primary').val(hex);
    }
  })
  .keyup(function(){
    $(this).colpickSetColor(this.value);
  });
  
  $('#color_secondary').colpick({
    layout:'hex',
    flat:false,
    submit:0,
    colorScheme:'light',
    onChange:function(hsb,hex,rgb,fromSetColor) {
      if(!fromSetColor) $('#color_secondary').val(hex);
    }
  })
  .keyup(function(){
    $(this).colpickSetColor(this.value);
  });
});
</script>

